<section>
  <%= render "layouts/sidebar" %>
  <%= render "layouts/flash" %>
  <section class="main">
        <section>
          <h1>Admirers</h1>
          <% their_admirers.each do |admirer| %>
          <ul>
            <li>
              <h3> <%= User.find(admirer.admirer_id).username %></h3>
              <p>
                <%= User.find(admirer.admirer_id).bio %>
              </p>
              <section>
                <%= link_to("See Responses", user_admirer_path(current_user.id, admirer.id))%>
                <%= button_to "Not Interested", user_admirer_path(current_user.id, admirer.id), method: :delete, data: { confirm: "Are you sure you want to remove this Admirer?" } %>
              </section>
            </li>
          </ul>
        </section>
      <% end %>
  </section>
</section>
